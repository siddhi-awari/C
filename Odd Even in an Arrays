#include<stdio.h>
int main()
{
int a[20],i,n,even=0,odd=0;
printf("enter number of elements: ");
scanf("%d", &n);
printf("enter values: ");
for(i=0;i<=n-1;i++)
{
scanf("%d", &a[i]);
}
for(i=0;i<=n-1;i++)
{
if(a[i]%2==0)
{
even++;
}
else
if(a[i]%2!=0)
{
odd++;
}
}
printf("even=%d odd=%d", even ,odd);
}
